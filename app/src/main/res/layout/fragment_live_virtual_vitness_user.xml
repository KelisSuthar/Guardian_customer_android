<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pager">


                        <com.rd.PageIndicatorView
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginVertical="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:piv_animationType="none"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_radius="4dp"
                            app:piv_selectedColor="@color/grey"
                            app:piv_unselectedColor="@color/darkBlue"
                            app:piv_viewPager="@id/pager" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtViewMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_more"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/txt_dark"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/lora_semibold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/cl1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvAccessYourRecording"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RelativeLayout
                            android:id="@+id/rlAccessYourRecording"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbAccessYourRecording"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:button="@null"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:layoutDirection="ltr"
                                android:text="@string/access_your_recording"
                                android:textAlignment="center"
                                android:textColor="@color/blue_white_color_selector"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvDrivingOffenceList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvAccessYourRecording">

                        <RelativeLayout
                            android:id="@+id/rlDrivingOffenceList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbDrivingOffenceList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:button="@null"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:layoutDirection="ltr"
                                android:text="@string/driving_offence_list"
                                android:textAlignment="center"
                                android:textColor="@color/blue_white_color_selector"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvDialLawyer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvDrivingOffenceList">

                        <RelativeLayout
                            android:id="@+id/rlDialLawyer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbDialLawyer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:button="@null"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:layoutDirection="ltr"
                                android:text="@string/dial_a_lawyer"
                                android:textAlignment="center"
                                android:textColor="@color/blue_white_color_selector"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>