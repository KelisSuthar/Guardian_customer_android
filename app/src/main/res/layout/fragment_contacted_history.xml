<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/headderConnectedhistory"
            layout="@layout/headder_layout" />

        <include
            android:id="@+id/noConnectedhistory"
            layout="@layout/no_internet_connection_layout"
            android:visibility="gone" />
        <include
            android:id="@+id/noDataConnectedHistory"
            layout="@layout/no_internet_connection_layout"
            android:visibility="gone" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/headderConnectedhistory">

            <include
                android:id="@+id/searchConnectedHistory"
                layout="@layout/layout_search_filter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>