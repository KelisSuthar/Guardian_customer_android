<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/headderLogin"
            layout="@layout/headder_layout" />

        <include
            android:id="@+id/noDataLogin"
            layout="@layout/no_data_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/noInternetLogin"
            layout="@layout/no_internet_connection_layout"
            android:visibility="gone" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsLogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/screen_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headderLogin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txtWelcomeBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/lora_semibold"
                    android:text="@string/welcome_back"
                    android:textAlignment="center"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txtEnterYourCredentialsToContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_regular"
                    android:text="@string/enter_your_credentials_to_continue"
                    android:textAlignment="center"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />

                <LinearLayout
                    android:id="@+id/lyLoginEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="vertical"

                    app:layout_constraintTop_toBottomOf="@+id/txtEnterYourCredentialsToContinue">

                    <include
                        android:id="@+id/emailphoneSelector"
                        layout="@layout/phone_email_selector"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@android:color/transparent"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
                        app:passwordToggleDrawable="@drawable/password_show_hide"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorPrimaryDark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextLoginPass"
                            style="@style/White_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_password"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLines="1"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/lora_regular"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="@string/forgot_your_password_underline"
                        android:textAlignment="gravity"
                        android:textColor="@color/txt_dark"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSigIn"
                    style="@style/blue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/sign_in"
                    app:layout_constraintTop_toBottomOf="@+id/lyLoginEditText" />


                <TextView
                    android:id="@+id/txtDoNotHaveAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/lora_regular"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/do_not_have_an_account"
                    android:textAlignment="gravity"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"

                    app:layout_constraintTop_toBottomOf="@+id/btnSigIn" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>