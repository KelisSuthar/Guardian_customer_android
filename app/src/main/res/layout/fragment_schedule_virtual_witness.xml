<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlue"
            android:paddingBottom="@dimen/_20sdp"
            tools:context=".ui.SelectRole.SelectRoleScreen">

            <!--        <include-->
            <!--            android:id="@+id/headder"-->
            <!--            layout="@layout/headder_layout" />-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            app:layout_constraintBottom_toTopOf="@+id/cl2"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pager">


                            <com.rd.PageIndicatorView
                                android:id="@+id/indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginVertical="@dimen/_10sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:piv_animationType="none"
                                app:piv_dynamicCount="true"
                                app:piv_interactiveAnimation="true"
                                app:piv_radius="4dp"
                                app:piv_selectedColor="@color/grey"
                                app:piv_unselectedColor="@color/darkBlue"
                                app:piv_viewPager="@id/pager" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtViewMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lora_semibold"
                                android:text="@string/view_more"
                                android:textColor="@color/txt_dark"
                                android:layout_marginRight="@dimen/_10sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/lyCallsLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/cl1">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvScheduleDateTime"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/rlScheduleDateTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightBlue_2">

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rbScheduleDateTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="@dimen/_20sdp"
                                    android:button="@null"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:fontFamily="@font/lora_semibold"
                                    android:layoutDirection="ltr"
                                    android:text="@string/schedule_a_call_date_and_time"
                                    android:textAlignment="center"
                                    android:textColor="@color/blue_white_color_selector"
                                    android:textSize="@dimen/_12ssp"
                                    tools:ignore="RtlSymmetry" />


                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvLocationWhereCallWillTakePlace"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/rlLocationWhereCallWillTakePlace"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/lightBlue_2"
                                android:paddingVertical="@dimen/_50sdp">

                                <androidx.appcompat.widget.AppCompatRadioButton
                                    android:id="@+id/rbLocationWhereCallWillTakePlace"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_20sdp"
                                    android:button="@null"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:fontFamily="@font/lora_semibold"
                                    android:layoutDirection="ltr"
                                    android:text="@string/location_where_call_will_take_place"
                                    android:textAlignment="center"
                                    android:textColor="@color/blue_white_color_selector"
                                    android:textSize="@dimen/_12ssp"
                                    tools:ignore="RtlSymmetry" />


                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvScheduleMultipleCalls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lyCallsLocation">

                        <RelativeLayout
                            android:id="@+id/rlScheduleMultipleCalls"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbScheduleMultipleCalls"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:button="@null"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:layoutDirection="ltr"
                                android:text="@string/schedule_multiple_calls"
                                android:textAlignment="center"
                                android:textColor="@color/blue_white_color_selector"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvContactSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvScheduleMultipleCalls">

                        <RelativeLayout
                            android:id="@+id/rlContactSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbContactSupport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:button="@null"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:layoutDirection="ltr"
                                android:text="@string/contact_support"
                                android:textAlignment="center"
                                android:textColor="@color/blue_white_color_selector"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>