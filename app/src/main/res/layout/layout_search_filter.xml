<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/lySearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_rounded_light_blue"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/lySearchFilter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLoginEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorTransparent"
                android:fontFamily="@font/lora_regular"
                android:hint="@string/search_here"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:singleLine="true"
                android:text="@string/search_here"
                android:textColor="@color/txt_dark"
                android:textColorHint="@color/txt_dark"
                android:textFontWeight="400"
                android:textSize="@dimen/_12ssp"
                tools:ignore="UnusedAttribute"
                android:layout_marginRight="@dimen/_13sdp"/>

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/normal_rounded_dark_blue">

                <ImageView
                    android:id="@+id/rgLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:src="@drawable/ic_search" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lySearchFilter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/lySearch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lySearch"
           >


            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/normal_rounded_dark_blue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:src="@drawable/ic_filter" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>