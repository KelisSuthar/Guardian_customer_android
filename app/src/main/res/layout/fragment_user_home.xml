                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/cl1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvRecord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/cv1">

                        <RelativeLayout
                            android:id="@+id/rlRecord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightBlue_2"
                            android:paddingVertical="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbRecord"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:background="@color/transparent"
                                android:button="@drawable/record_selector"
                                android:drawablePadding="@dimen/_15sdp"
                                android:fontFamily="@font/lora_semibold"
                                android:paddingLeft="@dimen/_15sdp"


                                android:text="@string/record"
                                android:textColor="@color/blue_white_color_selector"

                                android:textSize="@dimen/_12ssp" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvScheduleVirtualWitness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/cv1">

                        <RelativeLayout
