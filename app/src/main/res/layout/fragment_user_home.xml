<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout

       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginHorizontal="@dimen/_20sdp">

         <com.google.android.material.card.MaterialCardView
             android:id="@+id/cvRecord"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_20sdp"
             app:cardCornerRadius="@dimen/_10sdp"
             app:layout_constraintTop_toBottomOf="@+id/cv1">

            <RelativeLayout
                android:id="@+id/rlRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue_2"
                android:paddingVertical="@dimen/_20sdp">

               <androidx.appcompat.widget.AppCompatRadioButton
                   android:id="@+id/rbRecord"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_20sdp"
                   android:drawableLeft="@drawable/ic_record"
                   android:drawablePadding="@dimen/_15sdp"
                   android:fontFamily="@font/lora_semibold"
                   android:layoutDirection="rtl"
                   android:text="@string/record"
                   android:button="@null"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
         </com.google.android.material.card.MaterialCardView>

         <com.google.android.material.card.MaterialCardView
             android:id="@+id/cvScheduleVirtualWitness"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_20sdp"
             app:cardCornerRadius="@dimen/_10sdp"
             app:layout_constraintTop_toBottomOf="@+id/cv1">

            <RelativeLayout
                android:id="@+id/rlScheduleVirtualWitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue_2"
                android:paddingVertical="@dimen/_20sdp">

               <androidx.appcompat.widget.AppCompatRadioButton
                   android:id="@+id/rbScheduleVirtualWitness"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_20sdp"
                   android:drawableLeft="@drawable/ic_virtual_witness"
                   android:drawablePadding="@dimen/_15sdp"
                   android:fontFamily="@font/lora_semibold"
                   android:layoutDirection="rtl"
                   android:text="@string/schedule_virtual_witness"
                   android:button="@null"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
         </com.google.android.material.card.MaterialCardView>

         <com.google.android.material.card.MaterialCardView
             android:id="@+id/cvSupportService"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_20sdp"
             app:cardCornerRadius="@dimen/_10sdp"
             app:layout_constraintTop_toBottomOf="@+id/cv1">

            <RelativeLayout
                android:id="@+id/rlSupportService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue_2"
                android:paddingVertical="@dimen/_20sdp">

               <androidx.appcompat.widget.AppCompatRadioButton
                   android:id="@+id/rbSupportService"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_20sdp"
                   android:drawableLeft="@drawable/ic_support_service"
                   android:drawablePadding="@dimen/_15sdp"
                   android:fontFamily="@font/lora_semibold"
                   android:layoutDirection="rtl"
                   android:text="@string/record"
                   android:button="@null"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
         </com.google.android.material.card.MaterialCardView>

      </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
