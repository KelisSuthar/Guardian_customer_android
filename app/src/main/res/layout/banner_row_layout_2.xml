<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSpecialization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/lora_semibold"
        android:maxLines="1"
        android:text="@string/specialization"
        android:textColor="@color/txt_dark"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.islamkhsh.CardSliderViewPager
        android:id="@+id/cardSwiper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        app:cardSlider_otherPagesWidth="24dp"
        app:cardSlider_pageMargin="12dp"
        app:cardSlider_smallScaleFactor="0.8"
        app:layout_constraintTop_toBottomOf="@+id/txtSpecialization" />
</androidx.constraintlayout.widget.ConstraintLayout>