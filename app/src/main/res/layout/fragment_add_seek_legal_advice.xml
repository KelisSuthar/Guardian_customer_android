<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SeekLegalAdvice.AddEditSeekLegalAdv.AddSeekLegalAdvice">

<!--    <include-->
<!--        android:id="@+id/headerAddSeekLegal"-->
<!--        layout="@layout/headder_layout"-->
<!--         />-->
    <include
        android:id="@+id/noAddSeekLegal"
        layout="@layout/no_data_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/noInternetAddSeekLegal"
        layout="@layout/no_internet_connection_layout"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/ns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerAddSeekLegal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/_20sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitle"
            style="@style/White_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lora_regular"
            android:hint="Title"
            android:inputType="text"
            android:maxLines="1"
            android:textFontWeight="400"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDesc"
            style="@style/White_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:fontFamily="@font/lora_regular"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:textFontWeight="400"
            android:textSize="@dimen/_12ssp"
            android:gravity="top"
            android:singleLine="false"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/edtTitle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/blue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/submit"
            app:layout_constraintTop_toBottomOf="@+id/edtDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>