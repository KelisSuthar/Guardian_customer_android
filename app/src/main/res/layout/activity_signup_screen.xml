<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg"
        tools:context=".ui.signup.SignupScreen">

        <include
            android:id="@+id/headder"
            layout="@layout/headder_layout"
            android:visibility="gone" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headder"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:id="@+id/txtWelcomeBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lora_semibold"
                    android:text="@string/create_acc"
                    android:textAlignment="center"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txtEnterYourCredentialsToContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/lora_regular"
                    android:text="@string/signup_to_start"
                    android:textAlignment="center"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />


                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/txtEnterYourCredentialsToContinue">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfileImg"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:fontFamily="@font/lora_regular"
                        android:text="@string/profile_pic"
                        android:textAlignment="center"
                        android:textColor="@color/txt_dark"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/ll1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFullname"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_profile"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/fullname"
                        android:inputType="textEmailAddress"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_mail"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/email"

                        android:inputType="textEmailAddress"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMobileNum"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_mobile"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/mo_num"
                        android:maxLength="10"
                        android:inputType="number"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
                        app:passwordToggleDrawable="@drawable/password_show_hide"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorPrimaryDark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPass"
                            style="@style/White_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_password"
                            android:hint="@string/new_password"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
                        app:passwordToggleDrawable="@drawable/password_show_hide"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorPrimaryDark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtConPass"
                            style="@style/White_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_password"
                            android:hint="@string/confirm_new_password"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <AutoCompleteTextView
                        android:id="@+id/edtProvience"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_map"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/provience_state"
                        android:inputType="text"
                        android:focusable="false"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />

                    <AutoCompleteTextView
                        android:id="@+id/edtPostalCode"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_map_pin"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/postal_code"
                        android:inputType="text"
                        android:focusable="false"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtVehicalNum"
                        style="@style/White_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_vehical_number"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/licence_num"
                        android:inputType="text"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/ll2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/lora_semibold"
                            android:text="@string/upload_doc"
                            android:textAlignment="center"
                            android:textColor="@color/txt_dark"
                            android:textFontWeight="600"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/lora_regular"
                            android:text="@string/upload_max_doc"
                            android:textAlignment="center"
                            android:textColor="@color/txt_dark"
                            android:textFontWeight="400"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:text="@string/upload_doc_ex"
                        android:textAlignment="center"
                        android:textColor="@color/txt_dark"
                        android:textFontWeight="400"

                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeBack" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:scrollbars="none">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ivAddImage"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10ssp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_big_plus"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </HorizontalScrollView>



                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSigUp"
                    style="@style/blue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ll3" />

                <TextView
                    android:id="@+id/txtDoNotHaveAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_regular"
                    android:text="@string/do_not_have_an_account_sign_in"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/btnSigUp"/>

                <TextView
                    android:id="@+id/txtTermsAndConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_regular"
                    android:text="@string/t_and_c"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:textColor="@color/txt_dark"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDoNotHaveAccount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>